        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var buzzWords = ["bites", "bite", "mean", "mad", "bad", "angry", "crazy", "wild", "vicious"];

	for (var index in buzzWords) {
		var buzzWord = buzzWords[index];
		var description = current.description.toLowerCase();

		if (description.includes(buzzWord)) {
			// disallow the value to be saved to the database
			current.setAbortAction(true);

			// display an error message 
			var errorMessage = gs.getMessage("Description contained a buzzword ({0}), please modify.", buzzWord);
			gs.addErrorMessage(errorMessage);

			// exit out of loop early
			return;
		}
	}

})(current, previous);]]></script>
